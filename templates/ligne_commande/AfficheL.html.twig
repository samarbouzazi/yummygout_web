
{% extends 'base-back.html.twig'%}
{% block body %}
    <!doctype html>
    <html lang="en"> <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <style>

        </style>
        <title>Document</title>
    </head>
    <body >
    <div style="margin-top: 100px ; margin-left: 400px">

        <h1 style="margin-left: 25px; margin-left: 330px ; color: #86b7fe; font-family: 'Arial Black'; font-size: xx-large">Lignes Des Commandes </h1>

        <div style="margin-bottom: 5px;margin-left: 700px"><label class="text-monospace" style="border: #86b7fe ; color: #6c757d; padding: 8px; font-size: large; "> Ajouter Une ligne de commande :       </label>         <a class="btn btn-outline-warning" href="{{ path('ddl') }}"><i class="bi bi-plus-square-fill"></i></a>
        </div>
        {% for message in app.flashes('info')  %}
        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endfor %}
        <div class="card" style="margin-right: 35px">
        <div class="card-body" >
            <table  class="table" >
                <thead>
                <tr>

                    <th>Nom plat</th>
                    <th>Prix plat</th>
                    <th>quantite</th>
                    <th>numfacture</th>
                    <th>Rue</th>
                    <th>etat</th>
                    <th>Delegation</th>
                    <th>Nom client</th>
                    <th>prenom client</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
                </thead>
                <tbody>
                {% for p in lignecommande  %}
                <tr>
                    <td>{{ p.idplat.nomplat }}</td>
                    <td>{{ p.idplat.prixPlat }}</td>
                    <td>{{ p.idpanier.quantite  }}</td>
                    <td>{{ p.idpanier.numfacture }}</td>
                    <td>{{ p.idpanier.Rue }}</td>
                    <td>{{ p.idpanier.etat }}</td>
                    <td>{{ p.idpanier.Delegation }}</td>
                    <td>{{ p.idClient.nom }}</td>
                    <td>{{ p.idClient.prenom }}</td>
                    <td><a href ={{ path('updatel',{'id':p.idlc}) }}> <i class="bi bi-pencil-square"></i> </a></td>
                    <td><a href ={{ path('suppl',{'id':p.idlc}) }}> <i class="bi bi-trash-fill"></i> </a></td>

                </tr {% endfor %}>
                </tbody>
            </table>
        </div>
        </div>


    </div>
    </body>
    </html>
{% endblock %}