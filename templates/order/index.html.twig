                                                        <i class='fa fa-plus'></i>
                                                    </a></button>
                                                <button type="button" class="btn btn-outline-warning">   <a  href="{{path('order_remove',{'id': element.produit.idplat})}}">
                                                        <i class="fas fa-window-minimize"></i>
                                                    </a></button>
                                                <button type="button" class="btn btn-outline-danger">  <a   href="{{path('order_delete', {'id': element.produit.idplat})}}">
                                                        <i class="fa fa-trash"></i>
                                                    </a></button>


                                            {% endif %}
                                        </td>

                                    </tr>

                                {% else %}
                                    <tr>
                                        <td style='color:#ffffff'>   <td colspan="5">Votre panier est vide</td>
                                    </tr>
                                {% endfor %}

                                </tbody>

                                <tfoot>


                                <tr>

                                    <td colspan="3"><h4>Total</h4></td>
                                    <td class="text-end"><h4>{{ total }} dt </h4></td>
                                </tr>
                                </tfoot>
