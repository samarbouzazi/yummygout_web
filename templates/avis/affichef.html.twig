            <div class="comment-user-avater">

            </div>
            <div class="comment-text-body">
                <h4> user: {{ i.IdClient.prenom}} <br> blog: {{ i.Idblog.titreblog }} <br> j'aime: {{ i.Likee }}<br> j'aime pas: {{ i.deslike }}<br> <span class="comment-date">{{ i.dateavis|date('Y-m-d H:i:s') }}</span> <a href="{{ path('af',{'id':i.Idavis}) }}">Delete</a><a href="{{ path('updateaf',{'id':i.Idavis}) }}">modifier</a></h4>
                <p>{{i.descriptionavis }}</p>

            </div>

        </div>
    </div>
</div>

            {% endfor %}

</body>
</html>
{% endblock  %}