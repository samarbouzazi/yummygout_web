<div class="container">
    <h1>Statistiques</h1>
    <canvas id="categories" width="400" height="100"></canvas>

    <canvas id="evenements" width="300" height="100"></canvas>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js
" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous"></script>
<script>

    let evenement = document.querySelector("#evenements")
    let annGraph = new Chart(evenements, {
        type: "doughnut",
        data: {
            labels: {{ dates|raw }},
            datasets: [{
                label: "Nombre des plats",
                data: {{ evenementCount|raw }},
                backgroundColor:"rgb(255,0,0)",
                borderColor:"rgb(128,0,0)"
            }]
        },
        options: {
            scales: {

                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    })
</script>