{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('images/bg_1.jpg');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7 py-5">
                        <h3>Register</h3>
                        <p class="mb-4">YummyGout Happy to serve you.</p>

                        {{ form_start(registrationForm, {attr: {novalidate: 'novalidate'}}) }}

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group first">
                                    <label for="fname">First Name</label>
                                    {{ form_widget(registrationForm.firstName,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.firstName,{'attr': {'class':'text-danger'}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group first">
                                    <label for="lname">Last Name</label>
                                    {{ form_widget(registrationForm.lastName,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.lastName,{'attr': {'class':'text-danger'}})}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group first">
                                    <label for="email">Email Address</label>
                                    {{ form_widget(registrationForm.email,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.email,{'attr': {'class':'text-danger'}})}}

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group first">
                                    <label for="lname">Phone Number</label>
                                    {{ form_widget(registrationForm.phone,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.phone,{'attr': {'class':'text-danger'}})}}

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group first">
                                    <label for="lname">Address</label>
                                    {{ form_widget(registrationForm.address,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.address,{'attr': {'class':'text-danger'}})}}

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group last mb-3">
                                    <label for="password">Password</label>
                                    {{ form_widget(registrationForm.plainPassword.first,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.plainPassword.first,{'attr': {'class':'text-danger'}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group last mb-3">
                                    <label for="re-password">Re-type Password</label>
                                    {{ form_widget(registrationForm.plainPassword.second,{'attr': {'class':'form-control', 'placeholder': '...','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.plainPassword.second,{'attr': {'class':'text-danger'}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group last mb-3">
                                    <label for="re-password">Image</label>
                                    {{ form_widget(registrationForm.user.getImage,{'attr': {'class':'form-control', 'placeholder': 'Photo','required' : 'true'}}) }}
                                    {{ form_errors(registrationForm.image,{'attr': {'class':'text-danger'}})}}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex mb-5 mt-4 align-items-center">
                            <div class="d-flex align-items-center">
                                <label class="control control--checkbox mb-0">
                                        <span class="caption">Creating an account means you're okay with our <a href="#">Terms and Conditions</a> and our
                                            <a href="#">Privacy Policy</a>.</span>
                                    <input type="checkbox" checked="checked"/>
                                    <div class="control__indicator"></div>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-10" style="display: flex; align-items: center;justify-content: center"></div>
                        {{ form_widget(registrationForm.Register,{'attr': {'class':'btn btn-warning'}})}}

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
